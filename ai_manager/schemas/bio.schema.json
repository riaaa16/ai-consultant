{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "title", "location", "summary", "highlights"],
  "properties": {
    "name": {"type": "string", "minLength": 1},
    "title": {"type": "string"},
    "location": {"type": "string"},
    "summary": {
      "type": "array",
      "items": {"type": "string"}
    },
    "highlights": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}
